                    <%= address %>,<br>
                        <%= city%>,
                            <%= state %> -
                                <%= pincode%>
                                    <br><br>
                                    <%= emailOfUser %>

                </td>
                <td colspan="2" valign="top" align="right" style="padding-top: 30px;"><b>Invoice Number:<b><%= invoice %><br>
<b>Invoice Date:</b>
                    <%= date %><br>
                </td>
            </tr>
            <tr style="background-color:#f15a29; color:#fff;">
                <td align="center">Deliverables</td>
                <td align="center">Quantity</td>
                <td align="center">Price</td>
                <td align="center">Amount
                </td>
            </tr>
            <tr style="border-bottom:solid 2px #939393;">
                <td align="center"><b><%= package %></b></td>
                <td align="center">1</td>
                <td align="center">₹
                    <%= amount %>
