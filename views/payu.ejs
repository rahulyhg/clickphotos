<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
    crossorigin="anonymous">
<form action="https://secure.ebs.in/pg/ma/payment/request" name="payment" method="POST">
    <input hidden value="<%= account_id %>" name="account_id" />
    <input hidden value="<%= address %>" name="address" />
    <input hidden value="<%= amount %>" name="amount" />
    <input hidden value="<%= channel %>" name="channel" />
    <input hidden value="<%= city %>" name="city" />
    <input hidden value="<%= country %>" name="country" />
    <input hidden value="<%= currency %>" name="currency" />
    <input hidden value="<%= description %>" name="description" />
    <input hidden value="<%= display_currency %>" name="display_currency" />
    <input hidden value="<%= display_currency_rates %>" name="display_currency_rates" />
    <input hidden value="<%= email %>" name="email" />
    <input hidden value="<%= mode %>" name="mode" />
    <input hidden value="<%= name %>" name="name" />
    <input hidden value="<%= phone %>" name="phone" />
    <input hidden value="<%= postal_code %>" name="postal_code" />
    <input hidden value="<%= reference_no %>" name="reference_no" />
    <input hidden value="<%= return_url %>" name="return_url" />
    <input hidden value="<%= secure_hash %>" name="secure_hash" />
    <button type="submit" style="display:none" class="submitForm"> SUBMIT </button>
</form>
<div class="container">
    <h3 class="text-center" style="padding:20%;">Loading EBS Payment Gateway</h3>
</div>
<script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
    crossorigin="anonymous"></script>
<script>
    $(document).ready(function () {
        $(".submitForm").click();
    });
</script>